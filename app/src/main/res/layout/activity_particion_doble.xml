<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juank.noise_control.ParticionDoble">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese las dimensiones de las particiones:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Partición 1:" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Alto"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="92dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Espesor"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="138dp" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Partición 2:" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Alto"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="92dp" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Espesor"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="138dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distancia entre las particiones:" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Distancia"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <EditText
                android:id="@+id/et11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Alfa"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="¡Calcular!" />

            <TextView
                android:id="@+id/f1"
                style="@style/AppTheme.BotonCalculadora.Rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/f0"
                style="@style/AppTheme.BotonCalculadora.Rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/f3"
                style="@style/AppTheme.BotonCalculadora.Rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl7"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl8"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl9"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl10"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl11"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl12"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl13"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="invisible" />

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
