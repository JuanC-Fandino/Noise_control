<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juank.noise_control.Particion_simple">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese las dimensiones de la partición:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Alto"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="92dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Espesor"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="138dp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione el material:" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="¡Calcular!" />

            <TextView
                android:id="@+id/f11"
                style="@style/AppTheme.BotonCalculadora.Rojo"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fc"
                style="@style/AppTheme.BotonCalculadora.Rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl63"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl125"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_column="3"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl250"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl500"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl1000"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl2000"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl4000"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="invisible" />

        </LinearLayout>



    </ScrollView>




</android.support.constraint.ConstraintLayout>
