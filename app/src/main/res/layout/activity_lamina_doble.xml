            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese las dimensiones de las particiones:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Alto"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ancho"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="92dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material 1:" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Espesor"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="138dp" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material 2:" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Espesor"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="138dp" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Â¡Calcular!" />

            <TextView
                android:id="@+id/fc3"
                style="@style/AppTheme.BotonCalculadora.Rojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl19"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:gravity="center"
                android:text="0"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tl20"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tl21"
                style="@style/AppTheme.BotonCalculadora.Azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
